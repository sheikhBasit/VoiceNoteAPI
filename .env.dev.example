# Development Environment Variables
# Copy to .env and fill in your values

# ==================
# APP CONFIGURATION
# ==================
ENVIRONMENT=development
DEBUG=true
DEVICE_SECRET_KEY=your_dev_secret_key_here

# ==================
# DATABASE
# ==================
DATABASE_URL=postgresql+asyncpg://dev:dev@localhost:5433/voicenote_dev
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev
POSTGRES_DB=voicenote_dev

# ==================
# REDIS
# ==================
REDIS_URL=redis://localhost:6380/0
CACHE_TTL=3600

# ==================
# API KEYS & CREDENTIALS
# ==================
# These should be populated from GitHub Secrets or locally
OPENAI_API_KEY=your_openai_key_here
DEEPGRAM_API_KEY=d737a703fbe1ea6b67102b23b2120bdc8ab2e659
GROQ_API_KEY=your_groq_api_key_here

# ==================
# S3/MINIO STORAGE
# ==================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=voicenote
MINIO_SECURE=false

# ==================
# LOGGING
# ==================
LOG_LEVEL=DEBUG
LOG_FILE=/tmp/voicenote_api.log

# ==================
# CELERY/BACKGROUND TASKS
# ==================
CELERY_BROKER_URL=redis://localhost:6380/1
CELERY_RESULT_BACKEND=redis://localhost:6380/2

# ==================
# JWT & SECURITY
# ==================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================
# CORS
# ==================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ==================
# FEATURES
# ==================
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
