# Staging Environment Variables
# Copy to .env.staging and fill in your values

# ==================
# APP CONFIGURATION
# ==================
ENVIRONMENT=staging
DEBUG=false
DEVICE_SECRET_KEY=your_staging_secret_key_here

# ==================
# DATABASE
# ==================
DATABASE_URL=postgresql+asyncpg://staging:password@staging-db:5432/voicenote
POSTGRES_USER=staging
POSTGRES_PASSWORD=password
POSTGRES_DB=voicenote

# ==================
# REDIS
# ==================
REDIS_URL=redis://staging-redis:6379/0
CACHE_TTL=3600

# ==================
# API KEYS & CREDENTIALS
# ==================
# These should be populated from GitHub Secrets
OPENAI_API_KEY=your_staging_openai_key_here
DEEPGRAM_API_KEY=your_staging_deepgram_key_here
GROQ_API_KEY=your_staging_groq_key_here

# ==================
# S3/MINIO STORAGE
# ==================
MINIO_ENDPOINT=staging-minio:9000
MINIO_ACCESS_KEY=staging_access_key
MINIO_SECRET_KEY=staging_secret_key
MINIO_BUCKET=voicenote-staging
MINIO_SECURE=true

# ==================
# LOGGING
# ==================
LOG_LEVEL=INFO
LOG_FILE=/var/log/voicenote_api.log

# ==================
# CELERY/BACKGROUND TASKS
# ==================
CELERY_BROKER_URL=redis://staging-redis:6379/1
CELERY_RESULT_BACKEND=redis://staging-redis:6379/2

# ==================
# JWT & SECURITY
# ==================
JWT_SECRET_KEY=your_staging_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================
# CORS
# ==================
CORS_ORIGINS=["https://staging.your-domain.com"]

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# ==================
# FEATURES
# ==================
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true
