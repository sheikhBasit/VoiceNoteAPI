# Production Environment Variables
# Copy to .env.production and fill in your values
# ⚠️ NEVER commit this file to git!

# ==================
# APP CONFIGURATION
# ==================
ENVIRONMENT=production
DEBUG=false
DEVICE_SECRET_KEY=your_production_secret_key_here

# ==================
# DATABASE
# ==================
DATABASE_URL=postgresql+asyncpg://prod:password@prod-db:5432/voicenote
POSTGRES_USER=prod
POSTGRES_PASSWORD=password
POSTGRES_DB=voicenote

# ==================
# REDIS
# ==================
REDIS_URL=redis://prod-redis:6379/0
CACHE_TTL=3600

# ==================
# API KEYS & CREDENTIALS
# ==================
# These should be populated from secrets management system
OPENAI_API_KEY=your_production_openai_key_here
DEEPGRAM_API_KEY=your_production_deepgram_key_here
GROQ_API_KEY=your_production_groq_key_here

# ==================
# S3/MINIO STORAGE
# ==================
MINIO_ENDPOINT=prod-minio:9000
MINIO_ACCESS_KEY=prod_access_key
MINIO_SECRET_KEY=prod_secret_key
MINIO_BUCKET=voicenote-prod
MINIO_SECURE=true

# ==================
# LOGGING
# ==================
LOG_LEVEL=WARNING
LOG_FILE=/var/log/voicenote_api.log

# ==================
# CELERY/BACKGROUND TASKS
# ==================
CELERY_BROKER_URL=redis://prod-redis:6379/1
CELERY_RESULT_BACKEND=redis://prod-redis:6379/2

# ==================
# JWT & SECURITY
# ==================
JWT_SECRET_KEY=your_production_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================
# CORS
# ==================
CORS_ORIGINS=["https://your-domain.com", "https://api.your-domain.com"]

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_PERIOD=60

# ==================
# FEATURES
# ==================
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=false
ENABLE_METRICS=true

# ==================
# PERFORMANCE
# ==================
WORKER_COUNT=4
WORKER_TIMEOUT=120
MAX_CONNECTIONS=100
